mixin alert-success(time)
    - if (messages.success)
        .message.info
            div(class="alert alert-success alert-dismissible fade show slide-out-right" show-alert data-time=time)
                svg.me-2(viewbox='0 0 24 24' width='24' height='24' stroke='currentColor' stroke-width='2' fill='none' stroke-linecap='round' stroke-linejoin='round')
                    polyline(points='9 11 12 14 22 4')
                    path(d='M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11')
                strong Success!
                |  #{messages.success}
                button.btn-close(type='button' data-bs-dismiss='alert' aria-label='btn-close')