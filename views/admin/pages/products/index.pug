extends ../../../admin/layouts/default
include ../../mixins/filter-status
include ../../mixins/search
include ../../mixins/pagination

block main
    .card.mb-3
        .card-header
            | Bộ Lọc và Tìm Kiếm
        .card-body
            .row
                .col-md-6
                    // Các nút bộ lọc
                    .btn-group
                        +filter-status(filterStatus)
                .col-md-6
                    // Form tìm kiếm
                    +search(keyword)


    .card
        .card-body
            .table-responsive
                table.table.table-hover.table-responsive-sm
                    thead
                        tr
                            th STT.
                            th TÊN SẢN PHẨM
                            th GIÁ TIỀN
                            th TRẠNG THÁI
                            th
                    tbody
                        each item, index in products
                            tr
                                td #{index + 1}
                                td
                                    .products
                                        img.avatar.avatar-sm(src=item.thumbnail alt=item.title)
                                        div
                                            h6
                                                a(href='javascript:void(0)') #{item.title}
                                            span 24 Apr 2021

                                td #{item.price} VND
                                td
                                    if(item.status === "active")
                                        a(href="javascript:;"
                                            data-status=item.status
                                            data-id=item.id
                                            button-change-status
                                            class="badge light badge-success") Hoạt động
                                    else
                                        a(href="javascript:;"
                                            data-status=item.status
                                            data-id=item.id
                                            button-change-status
                                            class="badge light badge-danger") Dừng hoạt động
                                td
                                    .d-flex
                                        a.btn.btn-primary.shadow.btn-xs.sharp.me-1(href='#')
                                            i.fa.fa-pencil
                                        a.btn.btn-danger.shadow.btn-xs.sharp(href='#')
                                            i.fa.fa-trash


    +pagination(pagination)

    form(
        action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/products/change-status`
    )

    script(src="/admin/js/product.js")